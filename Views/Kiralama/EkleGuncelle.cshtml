@model Kiralama

<form method="post" enctype="multipart/form-data">
     



    <div class="row>

        <div class="col-10">
            <div class="border p-3 mt-5">
                <div class="row pb-3 ">

                @if (Model != null)
                {
                        <h2 class="text-primary">@(Model.Id == null ? "yeni Kiralama yap" : "Kitap Güncelle")</h2>
                }

                    </hr>
                </div>
                <div class="mb-3">
                    <label asp-for="OgrenciId" class="p-0"></label>
                    <input asp-for="OgrenciId" class="form-control" />
                    <span asp-validation-for="OgrenciId"  class="text-danger">lütfen burayı doldurunuz!!</span><!--asp items koyulabilir duruma göre-->
                </div>
                <div class="mb-3">
                    <label asp-for="KitapId" class="p-0"></label>
                    <select asp-for="KitapId" asp-items="ViewBag.KitapList" class="form-select">
                    </select>
                 </div>
                
                
            @if (Model != null)
            {
                    <button type="submit" class="btn btn-lg btn-primary" style="width:250px;">Güncelle</button>
            }
            else
            {
                    <button type="submit" class="btn btn-lg btn-primary" style="width:250px;">yeni kiralama</button>
            }
                <a asp-controller="Kiralama" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px;">kiralamalara geri dön</a>
            </div>
            </div>
            </div>
            <div class="col-2">
        @if (Model != null)
        {
                 <br><br />
            <img src="@Model.Kitap.ResimUrl" width="100%"
                 style="border-radius:7px; border:1px solid #bbb9b9" />
        }
            </div>
            
    </form>

           

       



  


